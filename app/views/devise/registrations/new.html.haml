%h2 ユーザ新規登録
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
  .field
    = f.label :nickname
    %br/
    = f.text_field :nickname, autofocus: true, autocomplete: "nickname"
  .field
    = f.label :email
    %br/
    = f.email_field :email, autocomplete: "email"
  .field
    = f.label :password
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
    %br/
    = f.password_field :password, autocomplete: "new-password"
  .field
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation, autocomplete: "new-password"
  .field
    = f.label :lastname
    %br/
    = f.text_field :lastname, autocomplete: "lastname"
  .field
    = f.label :firstname
    %br/
    = f.text_field :firstname, autocomplete: "firstname"
  .field
    = f.label :lastname_kana
    %br/
    = f.text_field :lastname_kana, autocomplete: "lastname_kana"
  .field
    = f.label :firstname_kana
    %br/
    = f.text_field :firstname_kana, autocomplete: "firstname_kana"
  .field
    = f.label :phone
    %br/
    = f.text_field :phone, autocomplete: "phone"
  .field
    = f.label :postcode
    %br/
    = f.text_field :postcode, autocomplete: "postcode"
  .field
    = f.label :prefecture_id
    %br/
    = f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {})
  .field
    = f.label :city
    %br/
    = f.text_field :city, autocomplete: "city"
  .field
    = f.label :address
    %br/
    = f.text_field :address, autocomplete: "address"
  .field
    = f.label :building
    %br/
    = f.text_field :building, autocomplete: "postcode"
  .actions
    = f.submit "Sign up"
= render "devise/shared/links"
